<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_cep"
        android:text="@string/string_text_view_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_text_cep"
        android:hint="@string/string_placeholder_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:autofillHints="" />

    <CheckBox android:id="@+id/checkbox_salvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_checkbox_salvar"
        android:onClick="onCheckboxClicked"/>

    <Button
        android:id="@+id/button_buscar"
        android:text="@string/string_button_buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>